@model MCCM.Entidad.TMCCM_Usuario

@{
    ViewBag.Title = "InsertarUsuario";
}

<script src="~/Scripts/js/Usuario.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="form-horizontal">
            <div class="card-header amarillo">
                <h4>Ingresar datos</h4>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body" style="border-color:#FFB140">
                <div class="row">

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre" } })
                            @Html.ValidationMessageFor(model => model.TC_Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Primer_Apellido, new { htmlAttributes = new { @class = "form-control", placeholder = "Primer Apellido" } })
                            @Html.ValidationMessageFor(model => model.TC_Primer_Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Segundo_Apellido, new { htmlAttributes = new { @class = "form-control", placeholder = "Segundo Apellido" } })
                            @Html.ValidationMessageFor(model => model.TC_Segundo_Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Contrasennia, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña" } })
                            @Html.ValidationMessageFor(model => model.TC_Contrasennia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Identificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "Identificación" } })
                            @Html.ValidationMessageFor(model => model.TC_Identificacion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TC_Correo, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo" } })
                            @Html.ValidationMessageFor(model => model.TC_Correo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
