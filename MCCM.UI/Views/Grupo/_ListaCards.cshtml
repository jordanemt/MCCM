{
    foreach (var item in Model)
    {
        @Html.Partial("_Card", item)
    }
}
else
{
    <div id="mensajeVacio" class="d-flex align-items-center justify-content-center h-100">
        <span>No hay datos para mostrar</span>
    </div>
}