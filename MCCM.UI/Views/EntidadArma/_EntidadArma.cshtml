@model MCCM.Entidad.TMCCM_Entidad_Arma
<div class="modal fade" id="entidadArmaModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font_blanco text-center" id="tituloEntidadArma">Insertar Arma</h5>
                <button type="button" class="close col-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="FormEntidadArma">
                    <div class="form-group row" id="divArmaID" style="display:none">
                        <label for="creadoPor" class="col-md-3 col-form-label">ID</label>
                        <input type="text" class="col-md-8 form-control" readonly name="TN_ID_Arma" id="TN_ID_Arma">
                    </div>
                    <div class="form-group row">
                        <label for="serie" class="col-md-3 col-form-label">Serie</label>
                        <input type="text" class="col-md-8 form-control" name="TC_Serie" id="TC_Serie_Arma" required>
                    </div>
                    <div class="form-group row">
                        <label for="marca" class="col-md-3 col-form-label">Marca</label>
                        <select class="col-md-8 form-control" name="TN_ID_Marca_Arma" id="TN_ID_Marca_Arma" title="Seleccione una Marca..." required></select>
                        <a href="#" data-toggle="modal" data-target="#modal_C_ArmaMarca" class="btn fa fa-plus col-sm-1 align-self-center font_gris"></a>
                        <label id="TN_ID_Marca_Arma-error" class="error" for="TN_ID_Marca_Arma" style="display: none"></label>

                    </div>
                    <div class="form-group row">
                        <label for="tipoArma" class="col-md-3 col-form-label">Tipo</label>
                        <select class="col-md-8 form-control" name="TN_ID_Tipo_Arma" id="TN_ID_Tipo_Arma" title="Seleccione Tipo..." required></select>
                        <a href="#" data-toggle="modal" data-target="#modal_C_ArmaTipo" class="btn fa fa-plus col-sm-1 align-self-center font_gris"></a>
                        <label id="TN_ID_Tipo_Arma-error" class="error" for="TN_ID_Tipo_Arma" style="display: none"></label>
                    </div>
                    <div class="form-group row">
                        <label for="modelo" class="col-md-3 col-form-label">Modelo</label>
                        <input type="text" class="col-md-8 form-control" name="TC_Modelo_Arma" id="TC_Modelo_Arma">
                    </div>
                    <div class="form-group row">
                        <label for="calibre" class="col-md-3 col-form-label">Calibre</label>
                        <input type="text" class="col-md-8 form-control" name="TC_Calibre" id="TC_Calibre_Arma">

                    </div>
                    <div class="form-group row">
                        <label for="comentario" class="col-md-3 col-form-label">Comentario</label>
                        <textarea class="col-md-8 form-control" name="TC_Comentario" id="TC_Comentario_Arma" rows="3"></textarea>
                    </div>
                    <div class="form-group row" id="divFMA" style="display:none">
                        <label for="TF_Fecha_Modificacion" class="col-md-3 col-form-label">Fecha Modificación</label>
                        <input type="text" class="col-md-8 form-control" name="TF_Fecha_Modificacion" readonly id="TF_Fecha_Modificacion_Arma">
                    </div>
                    <div class="form-group row" id="divFCA" style="display:none">
                        <label for="TF_Fecha_Creacion" class="col-md-3 col-form-label">Fecha Creacion</label>
                        <input type="text" class="col-md-8 form-control" name="TF_Fecha_Creacion" readonly id="TF_Fecha_Creacion_Arma">
                    </div>
                    <div class="form-group row">
                        <label for="creadoPor" class="col-md-3 col-form-label">Creado por</label>
                        <input type="text" class="col-md-8 form-control" name="TC_Creado_Por" id="TC_Creado_Por_Arma" required>
                    </div>
                    <div class="form-group row" style="display:none" id="divMPA">
                        <label for="modificadoPor" class="col-md-3 col-form-label">Modificado por</label>
                        <input type="text" class="col-md-8 form-control" name="TC_Modificado_Por" id="TC_Modificado_Por_Arma" required>
                    </div>
                    <div class="form-group row">
                        <label for="verificado" class="col-md-3 col-form-label">Verificado</label>
                        <div class="col-md-8  form-check">
                            <input class="form-check-input" type="checkbox" name="TB_Verificado" id="TB_Verificado_Arma">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button id="btnAgregarEntidadArma" type="submit" class="btn btn-primary submit-button mx-2">Insertar</button>
                        <button id="btnModificarEntidadArma" type="button" class="btn btn-primary submit-button mx-2" style="display:none">Modificar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>

                    </div>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-center">


            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/EntidadArma/_ModalMarcaArma.cshtml")
@Html.Partial("~/Views/EntidadArma/_ModalTipoArma.cshtml")
<script src="~/Scripts/js/EntidadArma.js"></script>