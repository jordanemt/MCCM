@model MCCM.Entidad.TMCCM_Tarea


<div class="modal fade" id="ModalFormTarea">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="tituloFormModal">Registrar Tarea</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body col-12">
                <div class="row">
                    <div class="form-horizontal col-12">

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span class="badge badge-primary">Usuario: </span></h6>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TN_ID_Usuario, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span class="badge badge-primary">Fecha: </span></h6>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TF_Fecha, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span class="badge badge-primary">Hora: </span></h6>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TF_Hora, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TF_Hora, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span class="badge badge-primary">Diligencia: </span></h6>
                            </div>
                            <div class="col-md-10">
                                <textarea class="form-control" rows="2"></textarea>

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span class="badge badge-primary">Lugar: </span></h6>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TC_Lugar, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TC_Lugar, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-offset-2 col-md-10">
                                <button class="btn btn-primary">Registrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
