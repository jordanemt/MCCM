@model MCCM.Entidad.TMCCM_Tarea


<div class="modal fade" id="ModalFormTarea">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="tituloFormModal">Registrar Tarea</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body col-12">
                <div class="row">
                    <form class="col-12" id="FormEvento">
                        <div class="form-row" id="divEventoID" style="display:none;">
                            <div class="col-2">
                                <h6><span>Tarea ID: </span></h6>
                            </div>
                            <div class="col-md-10" id="divTareaIDI">
                                <input class="form-control" id="tareaIDI" name="tareaID" readonly />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-2">
                                <h6><span>Fecha/Hora: </span></h6>
                            </div>
                            <div class="col-md-10" id="divCalendarioF">
                                <input class="form-control" id="calendarioBitacora" name="calendarioBitacora" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span>Asignado: </span></h6>
                            </div>
                            <div class="col-md-10" id="divAsignadoF">
                                <select class="form-control">
                                    <option value="1">Cod:666888 Maikel Matamoros Zúñiga</option>
                                    <option value="2">Cod:777999 Arturo Campos Bogantes</option>
                                    <option value="3">Cod:111333 Jordan Mendez Torres</option>
                                    <option value="4">Cod:444666 Valeria Leiva Quiros</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-2">
                                <h6><span>Lugar: </span></h6>
                            </div>

                            <div class="col-md-10" id="divTLugarF">
                                <input class="form-control" id="TLugarI" name="Lugar" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-2">
                                <h6><span>Diligencia:</span></h6>
                            </div>
                            <div class="col-md-10" id="divDiligenciaF">
                                <textarea rows="2" class="form-control w-100" id="DiligenciaI" name="Diligencia"></textarea>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center" style="padding-top:2%;">
                            <button id="btnRegistrarTarea" class="btn btn-primary">Registrar</button>
                            <button id="btnModificarTarea" class="btn btn-info" style="display:none">Modificar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/"> </script>
