@model MCCM.Entidad.TMCCM_C_Vehiculo_Color
<div class="modal fade" id="modal_C_ColorVehiculo" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font_blanco"">Insertar Color</h5>
                <button type="button" class="close col-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Form_C_ColorVehiculo">
                    <div class="d-flex justify-content-center">
                        <label for="TC_Descripcion" class="col-md-12 col-form-label text-center">Color</label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input type="text" class="col-6 form-control" name="TC_Descripcion" id="TC_Descripcion_C_ColorVehiculo" required>
                    </div>
                    <div class="d-flex justify-content-center" style="margin-top:1%">
                        <button id="btnAgregar_C_ColorVehiculo" type="submit" class="btn btn-primary submit-button mx-2">Insertar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

