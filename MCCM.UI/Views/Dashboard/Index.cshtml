
@{
    ViewBag.Title = "Dashboard";
}

<div class="col-sm-12" id="dashboard-container">

    <div class="col-sm-2 dashboard-child">

        <div class="panel panel-default" style="height: 70%">
            <div class="panel-heading">Casos</div>
            <div class="panel-body" style="overflow-y: scroll" id="casos-container">

            </div>
        </div>

        <div class="panel panel-default" style="height: 30%">
            <div class="panel-heading">Mando</div>
            <div class="panel-body" id="mando-container">
                
            </div>
        </div>

    </div>

    <div class="col-sm-10 dashboard-child">

        <div class="panel panel-default" style="height: 100%">
            <div class="panel-heading">Nombre del Caso</div>
            <div class="panel-body" id="pestanna-panel" style="height: 100%; flex-direction: row">

                <div class="panel panel-info col-sm-4" style="height: 100%">
                    <div class="panel-heading">Bitácora</div>
                    <div class="panel-body" style="overflow-y: scroll" id="bitacora-container">

                    </div>
                </div>

                <div class="panel panel-info col-sm-4" style="height: 100%">
                    <div class="panel-heading">Entidades</div>
                    <div class="panel-body" style="overflow-y: scroll" id="entidades-container">

                    </div>
                </div>

                <div class="panel panel-info col-sm-4" style="height: 100%">
                    <div class="panel-heading">Tareas</div>
                    <div class="panel-body" style="overflow-y: scroll" id="tareas-container">

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>