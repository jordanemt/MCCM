@model MCCM.Entidad.TMCCM_Entidad_Droga
    <div class="modal fade bd-example-modal-lg" id="entidadDrogaModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title col-11 text-center" id="exampleModalLabel">Insertar Entidad Drogas</h5>
                    <button type="button" class="close col-1" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group row">
                            <label for="tipo" class="col-md-3 col-form-label">Tipo</label>
                            <input type="text" class="col-md-8 form-control" name ="TN_ID_Tipo_Droga" id="segundoApellidoEntidadPersona">
                        </div>
                        <div class="form-group row">
                            <label for="nombre" class="col-md-3 col-form-label">Nombre</label>
                            <input type="text"  class="col-md-8 form-control" name="TC_Nombre" id="segundoApellidoEntidadPersona">
                        </div>
                        <div class="form-group row">
                            <label for="detalle" class="col-md-3 col-form-label">Detalle</label>
                            <textarea class="col-md-8 form-control" name="TC_Detalle" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="form-group row">
                            <label for="cantidad" class="col-md-3 col-form-label">Cantidad</label>
                            <input type="number"  class="col-md-8 form-control" name="TN_Cantidad" id="segundoApellidoEntidadPersona">
                        </div>

                        <div class="form-group row">
                            <label for="alias" class="col-md-3 col-form-label">Fecha de Decomiso</label>
                            <input type="text" class="col-md-8 form-control" name="TF_Fecha_Decomiso" id="edadEntidadPersona">
                        </div>

                        <div class="form-group row">
                            <label for="alias" class="col-md-3 col-form-label">Hora de Decomiso</label>
                            <input type="text"  class="col-md-8 form-control" name="TF_Hora_Decomiso" id="edadEntidadPersona">
                        </div>

                        <div class="form-group row">
                            <label for="alias" class="col-md-3 col-form-label">Fecha Creacion</label>
                            <input type="text"  class="col-md-8 form-control" name="TF_Fecha_Creacion" id="edadEntidadPersona">
                        </div>
                        <div class="form-group row">
                            <label for="creadoPor" class="col-md-3 col-form-label">Creado por</label>
                            <input type="text"  class="col-md-8 form-control" name="TC_Creado_Por" id="edadEntidadPersona">
                        </div>
                        <div class="form-group row">
                            <label for="creadoPor" class="col-md-3 col-form-label">Modificado por</label>
                            <input type="text"  class="col-md-8 form-control" name="TF_Modificado_Por" id="edadEntidadPersona">
                        </div>
                        <div class="form-group row">
                            <label for="verificado" class="col-md-3 col-form-label">Verificado</label>
                            <div class="col-md-8  form-check">
                                <input class="form-check-input" type="checkbox" name="TB_Verificado" id="gridCheck1">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-primary">Insertar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>

                </div>
            </div>
        </div>
    </div>
