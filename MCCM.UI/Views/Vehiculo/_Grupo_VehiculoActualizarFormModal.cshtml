@model IEnumerable<MCCM.Entidad.TMCCM_Vehiculo>

@{ 
    MCCM.Entidad.TMCCM_Grupo_Vehiculo grupo_Vehiculo = ViewBag.Grupo_Vehiculo;
}

<div class="modal fade" id="grupo_vehiculo-form-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Actualizar vehículo de grupo</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="grupo_vehiculo-form">
                    <div class="form-group row justify-content-center">
                        <label for="TN_ID_Grupo" class="control-label col-md-3">Número de grupo: </label>
                        <div class="row col-md-6">
                            <input class="form-control col-md-11" type="text" id="TN_ID_Grupo-Vehiculo" name="TN_ID_Grupo" value="@grupo_Vehiculo.TN_ID_Grupo" readonly />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label class="control-label col-md-3" for="TN_ID_Vehiculo">Placa de vehículo:</label>
                        <div class="row col-md-6">
                            <select id="TN_ID_Vehiculo" class="form-control col-md-11" name="TN_ID_Vehiculo" title="Seleccione un vehículo" disabled>
                                @foreach (MCCM.Entidad.TMCCM_Vehiculo item in Model)
                                {
                                    if (item.TN_ID_Vehiculo == grupo_Vehiculo.TN_ID_Vehiculo)
                                    {
                                        <option value="@item.TN_ID_Vehiculo" selected>@item.TC_Placa</option>
                                    }
                                    else
                                    {
                                        <option value="@item.TN_ID_Vehiculo">@item.TC_Placa</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="TN_Km_Inicio" class="control-label col-md-3">Km/Inicio: </label>
                        <div class="row col-md-6">
                            <input class="form-control col-md-11" type="text" id="TN_Km_Inicio" name="TN_Km_Inicio" value="@grupo_Vehiculo.TN_Km_Inicio" readonly />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="TN_Km_Regreso" class="control-label col-md-3">Km/Regreso </label>
                        <div class="row col-md-6">
                            <input class="form-control col-md-11" type="number" id="TN_Km_Regreso" name="TN_Km_Regreso" placeholder="Opcional" value="@grupo_Vehiculo.TN_Km_Regreso" />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="TF_Fecha_Hora" class="control-label col-md-3">Fecha/Hora: </label>
                        <div class="row col-md-6">
                            <input class="form-control col-md-11" type="text" id="TF_Fecha_Hora-Vehiculo" name="TF_Fecha_Hora" value="@(((DateTime) grupo_Vehiculo.TF_Fecha_Hora).ToString("yyyy-MM-dd HH:mm"))" />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <input type="button" value="Actualizar" class="btn btn-primary submit-button mx-2" onclick="actualizarGrupo_Vehiculo()" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    aplicarGrupo_VehiculoValidation();
    aplicarGrupo_VehiculoDateRangePicker();
    aplicarGrupo_VehiculoSelectPicker();
</script>
