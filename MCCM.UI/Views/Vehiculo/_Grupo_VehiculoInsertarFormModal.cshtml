@model IEnumerable<MCCM.Entidad.TMCCM_Vehiculo>

<div class="modal fade" id="grupo_vehiculo-form-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Asignar vehículo a grupo</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="grupo_vehiculo-form">
                    <div class="form-group row justify-content-center">
                        <label for="TN_ID_Grupo" class="control-label col-sm-3">Número de grupo: </label>
                        <div class="row col-sm-6">
                            <input class="form-control col-sm-11" type="text" id="TN_ID_Grupo_Vehiculo" name="TN_ID_Grupo" readonly />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label class="control-label col-sm-3" for="TN_ID_Vehiculo">Placa de vehículo:</label>
                        <div class="row col-sm-6">
                            <select id="TN_ID_Vehiculo-Grupo_Vehiculo" class="form-control col-sm-11" name="TN_ID_Vehiculo" title="Seleccione un vehículo" required>
                                @foreach (MCCM.Entidad.TMCCM_Vehiculo item in Model)
                                {
                                    <option value="@item.TN_ID_Vehiculo">@item.TC_Placa</option>
                                }
                            </select>
                            <a href="#" class="fa fa-plus col-sm-1 align-self-center font_gris" data-dismiss="modal" data-toggle="modal" data-target="#vehiculo-form-modal"></a>
                            <label id="TN_ID_Vehiculo-error" class="error" for="TN_ID_Vehiculo" style="display: none"></label>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="TF_Fecha_Hora" class="control-label col-sm-3">Fecha/Hora: </label>
                        <div class="row col-sm-6">
                            <input class="form-control col-sm-11" type="text" id="TF_Fecha_Hora-Vehiculo" name="TF_Fecha_Hora" required />
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <input type="button" value="Insertar" class="btn btn-primary submit-button mx-2" onclick="insertarGrupo_Vehiculo()" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    aplicarGrupo_VehiculoDateRangePicker();
    aplicarGrupo_VehiculoSelectPicker();
</script>