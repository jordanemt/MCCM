@model MCCM.Entidad.TMCCM_Grupo_Vehiculo

<div id="grupo_vehiculo-@Model.TN_ID_Grupo_Vehiculo" class="card">
    <div class="card-header gris_claro">
        <div>@Model.TMCCM_Vehiculo.TC_Placa</div>
        <div>
            <a href="#" class="editar" onclick="abrirGrupo_VehiculoActualizarFormModal(@Model.TN_ID_Grupo_Vehiculo)"><span><i class="fa fa-pencil font_negro font_amarilloHover"></i></span></a>
            <a href="#" class="borrar borrarVehiculo" id="@Model.TN_ID_Grupo_Vehiculo"><span><i class="fa fa-trash font_negro font_amarilloHover" data-toggle="modal" data-target="#ModalMensaje" aria-hidden="true"></i></span></a>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex flex-lg-row">
            <div class="col-lg-6">
                <span class="badge badge-primary w-100">Km/Inicio:</span>
            </div>
            <div class="col-lg-6">
                <p>@Model.TN_Km_Inicio</p>
            </div>
        </div>
        <div class="d-flex flex-lg-row">
            <div class="col-lg-6">
                <span class="badge badge-primary w-100">Km/Regreso:</span>
            </div>
            <div class="col-lg-6">
                @if (Model.TN_Km_Regreso != null)
                {
                    <p>@Model.TN_Km_Regreso</p>
                }
                else
                {
                    <p>---</p>
                }
            </div>
        </div>
        <div class="d-flex flex-lg-row">
            <div class="col-lg-6">
                <span class="badge badge-primary w-100">Fecha/Hora:</span>
            </div>
            <div class="col-lg-6">
                <p>@Model.TF_Fecha_Hora</p>
            </div>
        </div>
    </div>
</div>
