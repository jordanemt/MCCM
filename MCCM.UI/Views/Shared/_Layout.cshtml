<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @*CSS*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/Colores.css" rel="stylesheet" />

    @*JS*@
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>*@
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark azul_oscuro">
        <a href="/Dashboard/Index"><img alt="SMCNP" src="~/Img/icono.png" width="50" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item" id="Usuario" style="display: none">@Html.ActionLink("Usuarios", "ListaUsuario", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
            <ul class="navbar-nav mr-5">
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item" id="salir">@Html.ActionLink("Salir", "Salir", "Dashboard", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </form>
        </div>
    </nav>

    <div class="body-content container-fluid h-100 my-1 p-0">
        @RenderBody()
    </div>


</body>
</html>