@model MCCM.Entidad.TMCCM_Caso


<div class="modal fade" id="ModalFormCaso">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="tituloFormModal">Registrar Caso</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body col-12">
                <div class="row">


                    <form id="FormCaso" class="col-12">

                        <div class="form-group row" id="TN_ID_Input" style="display:none">
                            <div class="col-4">
                                <label class="col-form-label">ID Caso</label>
                            </div>
                            <div class="col-md-8">
                                <input type="number" class="form-control" name="TN_ID_Caso" id="TN_ID_Caso" readonly required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label class="col-form-label">#ECU</label>
                            </div>
                            <div class="col-md-8">
                                <input type="number" class=" form-control" name="TN_ECU" id="TN_ECU" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="col-form-label">Nombre</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class=" form-control" name="TC_Nombre_Caso" id="TC_Nombre_Caso" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label>Enfoque de Trabajo</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class=" form-control" name="TC_Enfoque_Trabajo" id="TC_Enfoque_Trabajo">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="w-100 col-form-label">Area De Trabajo</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class=" form-control" name="TC_Area_Trabajo" id="TC_Area_Trabajo">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="w-100 col-form-label">Nivel</label>
                            </div>
                            <div class="col-md-8">
                                <input type="number" class=" form-control" name="TN_Nivel" id="TN_Nivel" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="w-100 col-form-label">Descripcion</label>
                            </div>
                            <div class="col-md-8">
                                <textarea class=" form-control" name="TC_Descripcion" id="TC_Descripcion_Caso" required></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="w-100 col-form-label">Fuente</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class=" form-control" name="TC_Fuente" id="TC_Fuente" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="w-100 col-form-label">Delito</label>
                            </div>
                            <div class="col-md-8">
                                <textarea class=" form-control" name="TC_Delito" id="TC_Delito" required></textarea>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button id="btnRegistrarCaso" type="submit" class="btn btn-primary submit-button mx-2">Insertar</button>
                            <button id="btnModificarCaso" class="editar btn btn-primary submit-button mx-2" style="display:none">Modificar</button>
                            <button id="btnEliminarCaso" class="borrar btn btn-danger" style="display:none">Eliminar</button>
                            <button type="button" id="btnCancelarCaso" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/Scripts/js/Caso.js"></script>

