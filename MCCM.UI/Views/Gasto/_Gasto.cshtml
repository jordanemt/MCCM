@model MCCM.Entidad.TMCCM_Gasto

<div id="gasto-@Model.TN_ID_Gasto" class="card">
    <div class="card-header">
        <div>Gasto #@Model.TN_ID_Gasto</div>
        <div>
            <a href="#" onclick="abrirActualizarGastoFormModal(@Model.TN_ID_Gasto);"><span><i class="fa fa-edit"></i></span></a>
            <a href="#" class="borrar borrarGasto" id="@Model.TN_ID_Gasto"><span><i class="fa fa-trash" data-toggle="modal" data-target="#ModalMensaje" aria-hidden="true"></i></span></a>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex flex-row justify-content-center">
            <div class="col-sm-4">
                <span class="badge badge-primary">Fecha:</span>
            </div>
            <div class="col-sm-8">
                <p>@Model.TF_Fecha</p>
            </div>
        </div>
        <div class="d-flex flex-row">
            <div class="col-sm-4">
                <span class="badge badge-primary">Factura:</span>
            </div>
            <div class="col-sm-8">
                <p>@Model.TN_Num_Factura</p>
            </div>
        </div>
        <div class="d-flex flex-row">
            <div class="col-sm-4">
                <span class="badge badge-primary">Tipo de Gasto:</span>
            </div>
            <div class="col-sm-8">
                <p>@Model.TMCCM_C_Gasto_Tipo_Gasto.TC_Nombre</p>
            </div>
        </div>
        <div class="d-flex flex-row">
            <div class="col-sm-4">
                <span class="badge badge-primary">Monto:</span>
            </div>
            <div class="col-sm-8">
                <p>@Model.TD_Monto</p>
            </div>
        </div>
        <div class="d-flex flex-row">
            <div class="col-sm-4">
                <span class="badge badge-primary">Detalle:</span>
            </div>
            <div class="col-sm-8">
                <p>@Model.TC_Compra</p>
            </div>
        </div>
    </div>
</div>